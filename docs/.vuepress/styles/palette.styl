//修改markdown的table的样式
table {
    border-collapse: collapse;
    display: table;
    overflow-x: auto;
    width: 100%;
}

//markdown中的  ``  里面的样式 
.theme-default-content code {
    color: rgb(3, 5, 20);
    padding: 0.25rem 0.5rem;
    margin: 0;
    font-size: 0.85em;
    background-color: rgba(27,31,35,0.05);
    border-radius: 3px;
    font-weight: bold
}

